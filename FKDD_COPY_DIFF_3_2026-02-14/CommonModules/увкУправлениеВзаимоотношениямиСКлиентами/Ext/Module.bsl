// Функция предназначена для преобразования обычного текста в HTML формат
// Параметры:
//	Текст     - Строка - текст, преобразуемый в HTML-формат;
//	Кодировка - Строка - кодировка письма; 
//
Функция увкПреобразоватьТекстВHTML(Текст, Знач Кодировка) Экспорт
	
	Результат = увкПреобразоватьФрагментТекстаВHTML(Текст);
	
	Если Не ЗначениеЗаполнено(Кодировка) Тогда
		Кодировка = "utf-8";
	КонецЕсли;
	
	ФорматХТМЛ = "<HTML><HEAD>
	|<META http-equiv=Content-Type content=" + """" + "text/html; charset=" + Кодировка + """" + ">
	|<META content=" + """" + "MSHTML 6.00.2800.1400" + """" + " name=GENERATOR></HEAD>
	|<BODY>" + Результат + "</BODY></HTML>";
	
	Возврат ФорматХТМЛ;

КонецФункции

Функция увкПолучитьТелоHTMLДокумента(Текст) Экспорт
	ВремТекст = ВРег(Текст);
	ПозицияНачальногоТега = Найти(Текст,"<BODY>");	
	ПозицияКонечногоТега = Найти(Текст,"</BODY>");
	Результат = "";
	Если ПозицияНачальногоТега <> 0 И ПозицияКонечногоТега <> 0 Тогда
		Результат = Сред(Текст,ПозицияНачальногоТега+6,ПозицияКонечногоТега-ПозицияНачальногоТега-6);
	КонецЕсли;
	Возврат Результат;
КонецФункции

//Функция предназначена для преобразования фрагмента обычного текста в HTML формат
//
Функция увкПреобразоватьФрагментТекстаВHTML(Текст) Экспорт
	Результат = "";
	Результат = СтрЗаменить(Текст, "<" , "&lt");
	Результат = СтрЗаменить(Результат, ">" , "&gt");
	Результат = СтрЗаменить(Результат, Символы.ПС, "<BR>");
	Результат = "<P>" + Результат + "</P>";
	Возврат Результат;
КонецФункции

// Функция возвращает телефон контрагента
//
Функция увкПолучитьНомерТелефона(КонтрагентСсылка) Экспорт
	Результат	= "";
	
	Если ТипЗнч(КонтрагентСсылка)=Тип("СправочникСсылка.Контрагенты") И НЕ обЗначениеНеЗаполнено(КонтрагентСсылка) Тогда
		Запрос = Новый Запрос;
		Запрос.Текст =
		"ВЫБРАТЬ
		|	КонтактнаяИнформация.Представление КАК Телефон
		|ИЗ
		|	РегистрСведений.КонтактнаяИнформация КАК КонтактнаяИнформация
		|ГДЕ
		|	КонтактнаяИнформация.Объект = &Контрагент
		|	И КонтактнаяИнформация.Тип = &Тип
		|
		|УПОРЯДОЧИТЬ ПО
		|	КонтактнаяИнформация.ЗначениеПоУмолчанию УБЫВ";
		Запрос.УстановитьПараметр("Контрагент",КонтрагентСсылка);
		Запрос.УстановитьПараметр("Тип",Перечисления.ТипыКонтактнойИнформации.Телефон);
		
		Выборка = Запрос.Выполнить().Выбрать();
		
		Если Выборка.Следующий() Тогда
			Результат = Выборка.Телефон;
		КонецЕсли;
	КонецЕсли;
	
	Возврат Результат;
КонецФункции

