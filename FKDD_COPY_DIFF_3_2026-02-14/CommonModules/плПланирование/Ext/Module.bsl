// Обработчик события перед открытием
//
// Параметры:
//  ЭтаФорма             - Форма - переданная форма
//  Отказ                - Булево - Признак отказа от открытия формы
//  СтандартнаяОбработка - Булево - В данный параметр передается признак выполнения стандартной (системной)
//  								обработки события.
//
Процедура плФормаПередОткрытием(ЭтаФорма, Отказ, СтандартнаяОбработка, ВидДокумента) Экспорт
	
	Если (ЭтаФорма.ЭтоНовый()=Истина) И (обЗначениеНеЗаполнено(ЭтаФорма.ПараметрОснование)) Тогда
		
		Если ВидДокумента="БюджетПродаж" Тогда		
			ЭтаФорма.ПланированиеСебестоимости = Ложь;
			ЭтаФорма.ТипЦен                    = Справочники.ТипыЦен.ОсновнойТипЦенПродажи;    		
			
			// Курс управленческой валюты
			СтруктураКурсаУпр = обКурсДляВалюты(Константы.ВалютаУправленческогоУчетаКомпании.Получить(), ЭтаФорма.Дата);
			СтруктураКурса    = обКурсДляВалюты(обВалютаТипаЦены(Неопределено,ЭтаФорма.ТипЦен,Ложь), ЭтаФорма.Дата);		
			ЭтаФорма.КурсДокумента = ( СтруктураКурса.Курс / ?(СтруктураКурса.Кратность = 0, 1, СтруктураКурса.Кратность) ) / ( СтруктураКурсаУпр.Курс / ?(СтруктураКурсаУпр.Кратность = 0, 1, СтруктураКурсаУпр.Кратность) );
			
			ЭтаФорма.СпособПоследнегоЗаполнения = ?(ЭтаФорма.СпособПоследнегоЗаполнения=2, 2, -2);
			
			ЭтаФорма.ТипАнализа = Перечисления.ТипыАнализа.ПоФактическимДаннымПродаж;
			
		ИначеЕсли ВидДокумента="БюджетЗакупок" Тогда
			ЭтаФорма.ТипЦен        = Справочники.ТипыЦен.ОсновнойТипЦенЗакупки; 			
			СтруктураКурсаУпр      = обКурсДляВалюты(Константы.ВалютаУправленческогоУчетаКомпании.Получить(), ЭтаФорма.Дата);
			СтруктураКурса         = обКурсДляВалюты(обВалютаТипаЦены(Неопределено,ЭтаФорма.ТипЦен,Ложь), ЭтаФорма.Дата);		
			ЭтаФорма.КурсДокумента = ( СтруктураКурса.Курс / ?(СтруктураКурса.Кратность = 0, 1, СтруктураКурса.Кратность) ) / ( СтруктураКурсаУпр.Курс / ?(СтруктураКурсаУпр.Кратность = 0, 1, СтруктураКурсаУпр.Кратность) );
			
			ЭтаФорма.СпособПоследнегоЗаполнения        = ?(ЭтаФорма.СпособПоследнегоЗаполнения=2, 2, -2);	
			Попытка
				ЭтаФорма.СпособУчетаОстатков = Перечисления.СпособыУчетаОстатков.НеУчитывать;
			Исключение
			КонецПопытки;
			
			ЭтаФорма.ТипАнализа = Перечисления.ТипыАнализа.ПоФактическимДаннымЗакупок;
			
		ИначеЕсли ВидДокумента="БюджетДДС" Тогда
			
			Если ЭтаФорма.ИспользоватьРаздельныеГрафикиПогашения Тогда
				Если ЭтаФорма.СтатьиДДС.Количество()<>0 Тогда
					ЭтаФорма.ЭлементыФормы.ГрафикРаспределенияДС.ОтборСтрок.СтатьяДДС.Установить(ЭтаФорма.СтатьиДДС[0].СтатьяДДС);
				КонецЕсли;  				
			Иначе
				ЭтаФорма.ЭлементыФормы.ГрафикРаспределенияДС.ОтборСтрок.СтатьяДДС.Использование = Ложь; 				
			КонецЕсли;
			
			// По умолчанию используем раздельные графики платежей
			ЭтаФорма.ИспользоватьРаздельныеГрафикиПогашения = Истина;
			
			// запретим менять отбор
			ЭтаФорма.ЭлементыФормы.ГрафикРаспределенияДС.НастройкаОтбораСтрок.СтатьяДДС.Доступность = Ложь;
			ЭтаФорма.ЭлементыФормы.ГрафикРаспределенияДС.НастройкаОтбораСтрок.Период.Доступность    = Ложь;			
			ЭтаФорма.ПредыдущееЗначениеИспользованияГрафика = ЭтаФорма.ИспользоватьРаздельныеГрафикиПогашения;
			
			ЭтаФорма.ЗначениеПроцента     = 100;
			ЭтаФорма.КоличествоПериодов   = 3;
			ЭтаФорма.НачальноеСмещение    = 0;
			ЭтаФорма.СпособАвтозаполнения = Ложь;
			
		ИначеЕсли ВидДокумента="БюджетДоходовИРасходов" Тогда
			ЭтаФорма.ДокументОснованиеВыручка                 = Документы.БюджетПродаж.ПустаяСсылка();
			ЭтаФорма.ДокументОснованиеСебестоимость           = Неопределено;
			
			ЭтаФорма.ЗаполнитьСтатьиНакладныхДоходовИРасходов = Истина;
			ЭтаФорма.ЗаполнитьСтатьиСебестоимость             = Истина;
			ЭтаФорма.ЗаполнятьСтатьиВыручки                   = Истина; 	
			
			ЭтаФорма.КоличествоПериодовВыручка                = 3;
			ЭтаФорма.КоличествоПериодовСебестоимость          = 3;
			
			ЭтаФорма.КоэффициентРостаВыручка                  = 1;  	
			ЭтаФорма.КоэффициентРостаСебестоимость            = 1;  	
			
			ЭтаФорма.КоэффициентСезонностиВыручка             = 1;
			ЭтаФорма.КоэффициентСезонностиСебестоимость       = 1;  
			
		КонецЕсли;
	КонецЕсли;
	
	Если обЗначениеНеЗаполнено(ЭтаФорма.ДатаПланирования) Тогда
		ЭтаФорма.ДатаПланирования = НачалоМесяца(ТекущаяДата());
	КонецЕсли;
КонецПроцедуры // плФормаПередОткрытием()

// Обработчик события перед записью
//
// Параметры:
//  ЭтаФорма        - Форма - переданная форма
//  Отказ           - Булево - Признак отказа от записи формы
//  РежимЗаписи     - РежимЗаписиДокумента - В параметр передается текущий режим записи документа. 
//  РежимПроведения - РежимПроведенияДокумента - В данный параметр передается текущий режим проведения.
//
Процедура плФормаПередЗаписью(ЭтаФорма, Отказ, РежимЗаписи, РежимПроведения, ВидДокумента) Экспорт
	
	Если ВидДокумента="БюджетПродаж" Тогда
		ЭтаФорма.Комментарий           = СтрЗаменить(ЭтаФорма.ЭлементыФормы.НадписьПараметры.Заголовок, Символы.ПС, "; ");
		Попытка 
			ЭтаФорма.СуммаДокумента        = ЭтаФорма.Товары.Итог("СуммаВсегоУпр")+ЭтаФорма.Услуги.Итог("СуммаВсегоУпр");
		Исключение 
			ЭтаФорма.СуммаДокумента        = ЭтаФорма.Товары.Итог("СуммаВсегоУпр")
		КонецПопытки;
		ЭтаФорма.СебестоимостьУпрИтого = ЭтаФорма.Товары.Итог("СебестоимостьУпр");
		
	ИначеЕсли ВидДокумента="БюджетЗакупок" Тогда
		ЭтаФорма.Комментарий = СтрЗаменить(ЭтаФорма.ЭлементыФормы.НадписьПараметры.Заголовок, Символы.ПС, "; ");
		ЭтаФорма.СуммаДокумента = ЭтаФорма.Товары.Итог("СуммаВсегоУпр");
		
	ИначеЕсли ВидДокумента="БюджетДДС" Тогда
		ЭтаФорма.СуммаДокумента = ЭтаФорма.СтатьиДДС.Итог("БазоваяСуммаУпр");
		
	ИначеЕсли ВидДокумента="БюджетДоходовИРасходов" Тогда
		ЭтаФорма.СуммаДокумента = ЭтаФорма.РасходыИДоходы.Итог("СуммаДоход") - ЭтаФорма.РасходыИДоходы.Итог("СуммаРасход");		
	КонецЕсли;
	
	ЭтаФорма.ДатаПланирования = НачалоМесяца(ЭтаФорма.ДатаПланирования);
	
	// Проверим дату документа
	Параметры = Новый Структура;
	Параметры.Вставить("ДатаИзПериода", ЭтаФорма.Дата);
	Параметры.Вставить("Периодичность", ЭтаФорма.СценарийПланирования.Периодичность);
	Параметры.Вставить("Действие", 0);
	плПолучитьДатыПланируемогоПериода(Параметры); 	
	Дата_1 = Параметры.ДатаНачала;
	
	Параметры.Вставить("ДатаИзПериода", ЭтаФорма.ДатаПланирования); 
	плПолучитьДатыПланируемогоПериода(Параметры); 	
	Дата_2 = Параметры.ДатаНачала;
	
	Если Дата_1>Дата_2 Тогда
		Сообщить("Дата документа больше конечной даты планируемого периода.", СтатусСообщения.ОченьВажное);
		Отказ = Истина;
	КонецЕсли;
	
	//Проверим наличие в базе одинаковых бюджетов с одинаковой периодичностью.
	Запрос = Новый Запрос;
	
	Запрос.Текст = 
	"ВЫБРАТЬ ПЕРВЫЕ 1
	|	БюджетПродаж.Ссылка
	|ИЗ
	|	Документ.БюджетПродаж КАК БюджетПродаж
	|ГДЕ
	|	БюджетПродаж.Ссылка <> &Ссылка
	|	И БюджетПродаж.ПодразделениеКомпании = &ПодразделениеКомпании
	|	И БюджетПродаж.СценарийПланирования = &СценарийПланирования
	|	И БюджетПродаж.ХозОперация = &ХозОперация
	|	И БюджетПродаж.Проведен = ИСТИНА
	|	И БюджетПродаж.ДатаПланирования = &ДатаПланирования
	|
	|УПОРЯДОЧИТЬ ПО
	|	БюджетПродаж.Дата";
	
	// Установим нужную таблицу в тексте запроса
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "БюджетПродаж", ВидДокумента);
	
	Запрос.УстановитьПараметр("Ссылка",                ЭтаФорма.Ссылка);
	Запрос.УстановитьПараметр("ПодразделениеКомпании", ЭтаФорма.ПодразделениеКомпании);
	Запрос.УстановитьПараметр("СценарийПланирования",  ЭтаФорма.СценарийПланирования);
	Запрос.УстановитьПараметр("ХозОперация",           ЭтаФорма.ХозОперация);
	Запрос.УстановитьПараметр("ДатаПланирования",      ЭтаФорма.ДатаПланирования);
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		ТекстСообщения = "" + "Внимание! В указанном периоде планирования уже существует аналогичный бюджет по данному подразделению: ";
		ТекстСообщения = ТекстСообщения + Выборка.Ссылка;
		Сообщить(ТекстСообщения, СтатусСообщения.ОченьВажное);
	КонецЕсли;	
	
КонецПроцедуры // плФормаПередЗаписью()

// Обработчик заполнение
//
// Параметры:
//  Документ  - ДокументОбъект - документ, который заполняем
//  Основание - Произвольный - Значение, которое используется как основание для заполнения. 
//
Процедура плОбработкаЗаполнения(Документ, Основание) Экспорт
	
	Если обЗначениеНеЗаполнено(Основание) Тогда
		дкОбработкаЗаполнения(Документ, Основание);	
		Возврат;
	КонецЕсли;
	
	Попытка
		ОснованиеПоНоменклатуре = (Основание.ХозОперация=Справочники.ХозОперации.БюджетЗакупокПоНоменклатуре или Основание.ХозОперация=Справочники.ХозОперации.БюджетПродажПоНоменклатуре);
	Исключение
		ОснованиеПоНоменклатуре = Ложь;
	КонецПопытки;
	
	Если ТипЗнч(Документ)=Тип("ДокументОбъект.БюджетПродаж") Тогда
		Если ТипЗнч(Основание)=Тип("ДокументСсылка.БюджетПродаж") Тогда
			Если ОснованиеПоНоменклатуре Тогда
				Документ.ХозОперация = Справочники.ХозОперации.БюджетПродажПоНоменклатуре;	
			Иначе
				СписокХО = Документ.ПолучитьСписокХозОпераций();
				Для Каждого ХО Из СписокХО Цикл
					Попытка ХО.Представление = Справочники.ХозОперации[ХО.Значение].Наименование; Исключение КонецПопытки;
				КонецЦикла;
				
				ВыбХО = СписокХО.ВыбратьЭлемент("Выберите вид хозяйственной операции");
				
				// смотрим что выбрали
				Если ВыбХО=Неопределено Тогда 
					Документ.ХозОперация = Справочники.ХозОперации.БюджетПродажПоНоменклатуре;			
				Иначе 
					Документ.ХозОперация = Справочники.ХозОперации[ВыбХО.Значение]		
				КонецЕсли;  				
			КонецЕсли;    	
			
			// Стандартная процедура заполнения
			дкОбработкаЗаполнения(Документ, Основание);
			
			ДокументПоНоменклатуре              = (Документ.ХозОперация=Справочники.ХозОперации.БюджетПродажПоНоменклатуре);			
			Документ.ДокументОснование          = Основание;
			Документ.СпособПоследнегоЗаполнения = 2;	
			Документ.ДатаПланирования           = НачалоМесяца(ТекущаяДата());
			Документ.ТипАнализа                 = Перечисления.ТипыАнализа.ПоФактическимДаннымПродаж;
			
			Если ДокументПоНоменклатуре И Не ОснованиеПоНоменклатуре Тогда				
				Документ.Товары.Очистить() 
			КонецЕсли;			
		КонецЕсли;	
		
	ИначеЕсли ТипЗнч(Документ)=Тип("ДокументОбъект.БюджетЗакупок") Тогда
		Если ТипЗнч(Основание)=Тип("ДокументСсылка.БюджетПродаж") или ТипЗнч(Основание)=Тип("ДокументСсылка.БюджетЗакупок") Тогда
			Если ОснованиеПоНоменклатуре Тогда
				Документ.ХозОперация = Справочники.ХозОперации.БюджетЗакупокПоНоменклатуре;	
			Иначе
				СписокХО = Документ.ПолучитьСписокХозОпераций();
				Для Каждого ХО Из СписокХО Цикл
					Попытка ХО.Представление = Справочники.ХозОперации[ХО.Значение].Наименование; Исключение КонецПопытки;
				КонецЦикла;
				
				ВыбХО = СписокХО.ВыбратьЭлемент("Выберите вид хозяйственной операции");
				
				// смотрим что выбрали
				Если ВыбХО=Неопределено Тогда 
					Документ.ХозОперация = Справочники.ХозОперации.БюджетПродажПоНоменклатуре;			
				Иначе 
					Документ.ХозОперация = Справочники.ХозОперации[ВыбХО.Значение]		
				КонецЕсли;				
			КонецЕсли;  			
		Иначе
			Возврат;
		КонецЕсли;	
		
		// Стандартная процедура заполнения
		дкОбработкаЗаполнения(Документ, Основание);
		
		ДокументПоНоменклатуре = (Документ.ХозОперация=Справочники.ХозОперации.БюджетЗакупокПоНоменклатуре);
		
		Документ.ДокументОснование          = Основание;
		Документ.СпособПоследнегоЗаполнения = 2;	
		Документ.ДатаПланирования           = НачалоМесяца(ТекущаяДата());
		Документ.ТипАнализа                 = Перечисления.ТипыАнализа.ПоФактическимДаннымЗакупок;
		
		Если обЗначениеНеЗаполнено(Документ.СпособУчетаОстатков) Тогда  			
			Документ.СпособУчетаОстатков = Перечисления.СпособыУчетаОстатков.НеУчитывать;
		КонецЕсли;
		
		// очистим табличную часть, т.к. будет открыта форма заполнения по документу основанию.
		Документ.Товары.Очистить(); 
		
		// Тип цен поменяем
		Если Не Документ.ТипЦен.Закупка Тогда
			Документ.ТипЦен = Справочники.ТипыЦен.ОсновнойТипЦенЗакупки;	
		КонецЕсли;		
	ИначеЕсли ТипЗнч(Документ)=Тип("ДокументОбъект.БюджетДДС") Тогда  
		// Стандартная процедура заполнения
		дкОбработкаЗаполнения(Документ, Основание);
		Документ.ДатаПланирования = НачалоМесяца(Документ.Дата);
		
	ИначеЕсли ТипЗнч(Документ)=Тип("ДокументОбъект.БюджетДоходовИРасходов") Тогда  
		// Стандартная процедура заполнения
		Документ.ХозОперация = Основание.ХозОперация;
		дкОбработкаЗаполнения(Документ, Основание);
		Документ.ДатаПланирования = НачалоМесяца(Документ.Дата);
		
	КонецЕсли;
	
	
КонецПроцедуры // плОбработкаЗаполнения()


