// Печать документов из регистра
Процедура НапечататьДокументы() Экспорт
	// получим сохраненные для пользователя параметры
	СписокУзлов = ХранилищеОбщихНастроек.Загрузить("НастройкиПечатиДляМобильногоКлиента_СписокУзлов");
	
	Если СписокУзлов <> Неопределено И ТипЗнч(СписокУзлов) = Тип("Массив") Тогда
		Запрос = Новый Запрос;
		Запрос.Текст =
		"ВЫБРАТЬ
		|	ОчередьПечатиДокументовМобильногоКлиента.Документ,
		|	ОчередьПечатиДокументовМобильногоКлиента.УзелОбмена,
		|	ВЫРАЗИТЬ(ОчередьПечатиДокументовМобильногоКлиента.УзелОбмена.Принтер КАК СТРОКА(1000)) КАК Принтер,
		|	ОчередьПечатиДокументовМобильногоКлиента.ПечатнаяФорма,
		|	ОчередьПечатиДокументовМобильногоКлиента.Пользователь
		|ИЗ
		|	РегистрСведений.ОчередьПечатиДокументовМобильногоКлиента КАК ОчередьПечатиДокументовМобильногоКлиента
		|" +?(СписокУзлов.Количество() = 0, "","ГДЕ ОчередьПечатиДокументовМобильногоКлиента.УзелОбмена В(&УзелыОбмена) ") + "
		|
		|СГРУППИРОВАТЬ ПО
		|	ОчередьПечатиДокументовМобильногоКлиента.Документ,
		|	ОчередьПечатиДокументовМобильногоКлиента.ПечатнаяФорма,
		|	ОчередьПечатиДокументовМобильногоКлиента.УзелОбмена,
		|	ОчередьПечатиДокументовМобильногоКлиента.Пользователь";
		
		Запрос.УстановитьПараметр("УзелыОбмена", СписокУзлов);
		РезультатЗапроса = Запрос.Выполнить();
		
		Если РезультатЗапроса.Пустой() Тогда
			Возврат;
		КонецЕсли;
		
		ТЗ_Документы = РезультатЗапроса.Выгрузить();
		
		Блокировка = Новый БлокировкаДанных;
		
		ЭлементБлокировки                = Блокировка.Добавить("РегистрСведений.ОчередьПечатиДокументовМобильногоКлиента");
		ЭлементБлокировки.Режим          = РежимБлокировкиДанных.Исключительный;
		ЭлементБлокировки.ИсточникДанных = ТЗ_Документы;
		ЭлементБлокировки.ИспользоватьИзИсточникаДанных("Документ"  , "Документ");
		ЭлементБлокировки.ИспользоватьИзИсточникаДанных("УзелОбмена", "УзелОбмена");
		
		НачатьТранзакцию(РежимУправленияБлокировкойДанных.Управляемый);
		
		Блокировка.Заблокировать();
		
		Для Каждого Документ Из ТЗ_Документы Цикл
			Если НЕ ЗначениеЗаполнено(Документ.Документ) ИЛИ НЕ ЗначениеЗаполнено(Документ.УзелОбмена) Тогда
				Продолжить;
			КонецЕсли;
			
			ОбъектДокумента = Документ.Документ.ПолучитьОбъект();
			
			Если Документ.ПечатнаяФорма = "АктОсмотра" Тогда
				Попытка
					ОбъектДокумента.ПечатьАктОсмотраМобКлиент(Документ.УзелОбмена);
				Исключение
					ЗаписьЖурналаРегистрации("Ошибка печати мобильного клиента.",
						УровеньЖурналаРегистрации.Ошибка,
						Документ.Документ.Метаданные(),
						Документ.Документ,
						"Печать документа <"+Документ.Документ+"> не удалась, по причине:" + Символы.ПС + ОписаниеОшибки());
					Продолжить;
				КонецПопытки;
			КонецЕсли;
			
			// почистим регистр
			КлючЗаписи = РегистрыСведений.ОчередьПечатиДокументовМобильногоКлиента.СоздатьМенеджерЗаписи();
			ЗаполнитьЗначенияСвойств(КлючЗаписи, Документ);
			Попытка
				КлючЗаписи.Удалить();
			Исключение
				ОтменитьТранзакцию();
			КонецПопытки;
		КонецЦикла;
		
		ЗафиксироватьТранзакцию();
	КонецЕсли;
КонецПроцедуры

