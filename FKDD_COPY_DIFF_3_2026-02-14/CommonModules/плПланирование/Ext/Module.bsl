// Функция возвращает максимальное количество периодов
// Параметры:
//	ЭтаФорма - объект формы
//	Параметры - параметры поиска
//	Группировка - группировка полей
//
Функция плПолучитьМаксимальноеКоличествоПериодов(ЭтаФорма, Параметры, Группировка=Неопределено) Экспорт
	
	Периодичность    = ЭтаФорма.ВладелецФормы.СценарийПланирования.Периодичность;
	НеУчитыватьПериодыБезДанных = ЭтаФорма.НеУчитыватьПериодыБезДанных;
	
	Если обЗначениеНеЗаполнено(ЭтаФорма.ТипАнализа) Тогда
		ЭтаФорма.ТипАнализа = Перечисления.ТипыАнализа.ПоФактическимДаннымПродаж;
	КонецЕсли;
	ТипАнализа = ЭтаФорма.ТипАнализа;
	
	Запрос = Новый Запрос;
	ТекстЗапроса = "";
	тОтбор = "";
	Если НеУчитыватьПериодыБезДанных И (Группировка<>Неопределено) Тогда
		ТекстЗапроса = "ВЫБРАТЬ ПЕРВЫЕ 1
		|	ТаблицаДанных."+Группировка+",
		|	КОЛИЧЕСТВО(НАЧАЛОПЕРИОДА(ТаблицаДанных.Период, МЕСЯЦ)) КАК КоличествоПериодов
		|ИЗ
		|	РегистрНакопления.ТаблицаДанных КАК ТаблицаДанных
		|ГДЕ
		| //Отборы
		|
		|СГРУППИРОВАТЬ ПО
		|	ТаблицаДанных."+Группировка+"
		|
		|УПОРЯДОЧИТЬ ПО
		|	КоличествоПериодов УБЫВ";
		
		ПараметрыДляАнализаДат = Новый Структура;
		ПараметрыДляАнализаДат.Вставить("Периодичность", Периодичность);
		плПолучитьПериодыПланирования(ЭтаФорма, ПараметрыДляАнализаДат);
		тОтбор = Символы.ПС + ПараметрыДляАнализаДат.ТекстОтбора;
		Для Каждого ТекПараметр Из ПараметрыДляАнализаДат.СтруктураСезонов Цикл
			Запрос.УстановитьПараметр(ТекПараметр.Ключ, ТекПараметр.Значение);
		КонецЦикла;
	Иначе
		ТекстЗапроса = "ВЫБРАТЬ ПЕРВЫЕ 1
		|	РАЗНОСТЬДАТ(НАЧАЛОПЕРИОДА(ТаблицаДанных.Период, МЕСЯЦ), НАЧАЛОПЕРИОДА(&ДатаОкончания, МЕСЯЦ), МЕСЯЦ)+1 КАК КоличествоПериодов
		|ИЗ
		|	РегистрНакопления.ТаблицаДанных КАК ТаблицаДанных
		|ГДЕ
		| //Отборы
		|
		|УПОРЯДОЧИТЬ ПО
		|	ТаблицаДанных.Период"; 
		
		ДатаОкончания = плПолучитьДатыПоНастройкеПериода(ЭтаФорма).ДатаОкончания;
		тОтбор = Символы.ПС + "ТаблицаДанных.Период <= &ДатаОкончания";
		Запрос.УстановитьПараметр("ДатаОкончания", ДатаОкончания);
	КонецЕсли;
	
	тОтбор = тОтбор+?(Параметры.Свойство("тОтборПоПодразделению"), Символы.ПС + " И "+Параметры.тОтборПоПодразделению, "");
	
	Если Параметры.Свойство("ДопОтборы") Тогда
		ДопОтборы = Параметры.ДопОтборы;
		тОтбор = тОтбор + Символы.ПС + ?(ЗначениеЗаполнено(ДопОтборы.ТекстОбора), "И " + ДопОтборы.ТекстОбора, "");
		Для Каждого ТекПараметр Из ДопОтборы.Параметры Цикл
			Запрос.УстановитьПараметр(ТекПараметр.Ключ, ТекПараметр.Значение);
		КонецЦикла;
	КонецЕсли;
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "//Отборы", тОтбор);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ТаблицаДанных", Параметры.ИмяТаблицы);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "МЕСЯЦ", Строка(Периодичность));	
	
	Если Параметры.Свойство("Подразделение") Тогда
		Запрос.УстановитьПараметр("Подразделение", 	  Параметры.Подразделение);
	КонецЕсли;
	
	Запрос.Текст = ТекстЗапроса;
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Возврат Выборка.КоличествоПериодов;
	Иначе
		Возврат 0;
	КонецЕсли;
	
КонецФункции // ПолучитьМаксимальноеКоличествоПериодов()

// Получает коэффициент пересчета из валюты управл. учета в валюту рег.учета на заданную дату.
//
// Параметры:
//  Дата - Дата - на какую дату получить
//
Функция плПолучитьКоэффициентПересчетаВалют(Дата) Экспорт
	
	структураУпр = обКурсДляВалюты(Константы.ВалютаУправленческогоУчетаКомпании.Получить(), Дата);
	структураРег = обКурсДляВалюты(Константы.ВалютаРегламентированногоУчетаОрганизаций.Получить(), Дата); 	
	КоэфПересчета = (структураУпр.Курс/структураУпр.Кратность) / (структураРег.Курс/структураРег.Кратность);
	Возврат КоэфПересчета;  	
	
КонецФункции // плПолучитьКоэффициентПересчетаВалют()

// Возвращает строку содержащую количество периодов
//
// Параметры:
//  Количество    - Число - количество периодов 
//  Периодичность - Перечисление - ПериодичностьПланирования
//
// Возвращаемое значение:
//  Строка - количество периодов
//
Функция плВернутьСтрокуКоличествоПериодовДляАнализа(Количество, Периодичность) Экспорт
	
	Если Периодичность=Перечисления.ПериодичностьПланирования.Месяц Тогда
		стрВрем = ЧислоПрописью(Количество, , "месяц,месяца,месяцев,м,,,,,0");
		стрДляПоиска1 = "месяц";
		стрДляПоиска2 = "--";
		
	ИначеЕсли Периодичность=Перечисления.ПериодичностьПланирования.Квартал Тогда
		стрВрем = ЧислоПрописью(Количество, , "квартал,квартала,кварталов,м,,,,,0");
		стрДляПоиска1 = "квартал";
		стрДляПоиска2 = "--";
		
	ИначеЕсли Периодичность=Перечисления.ПериодичностьПланирования.Год Тогда
		стрВрем = ЧислоПрописью(Количество, , "год,года,лет,м,,,,,0");
		стрДляПоиска1 = "год";
		стрДляПоиска2 = "лет"; 
	КонецЕсли;
	
	Ответ = Найти(стрВрем, стрДляПоиска1);
	Если Ответ=0 Тогда
		Ответ = Найти(стрВрем, стрДляПоиска2);
	КонецЕсли;
	Возврат Сред(стрВрем, Ответ);
	
КонецФункции // ВернутьСтрокуКоличествоПериодовДляАнализа()

// Формирует надпись типа цены
