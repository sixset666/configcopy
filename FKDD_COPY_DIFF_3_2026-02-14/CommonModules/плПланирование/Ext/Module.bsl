//
Процедура плСформироватьНадписьТипаЦены(Параметры) Экспорт
	ТипЦен         = Параметры.ТипЦен        ;
	КурсДокумента  = Параметры.КурсДокумента ;
	ЭлементНадпись = Параметры.НадписьИнформацияОТипеЦен;
	
	Если ТипЦен.ВВалютеУчета Тогда
		Текст = "Тип цен: " + ТипЦен + "; (В валюте учета номенклатуры)";
	Иначе
		ТипЦенВалютаЦены=обВалютаТипаЦены(Неопределено,ТипЦен,Ложь);
		Текст = "Тип цен: " + ТипЦен + "; Валюта: " + ТипЦенВалютаЦены + " (" + ТипЦенВалютаЦены + "/" + Константы.ВалютаУправленческогоУчетаКомпании.Получить() + "=" + КурсДокумента+ ")";
