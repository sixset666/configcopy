Процедура ОтправитьНапоминаниеПользователю(ПолучательПисьма, ТекстСообщения, СсылкаНаОбъект = Неопределено) Экспорт
	
	//Найдем получателя
	Получатель = Справочники.Пользователи.ПустаяСсылка();
	Если ТипЗнч(ПолучательПисьма) = Тип ("СправочникСсылка.Сотрудники")	Тогда
		Запрос = Новый Запрос();
		Запрос.Текст = "ВЫБРАТЬ
						|	Пользователи.Ссылка
						|ИЗ
						|	Справочник.Пользователи КАК Пользователи
						|ГДЕ
						|	Пользователи.Сотрудник = &Сотрудник";
		Запрос.УстановитьПараметр("Сотрудник", ПолучательПисьма);
		Выборка = Запрос.Выполнить().Выбрать();
		Если Выборка.Следующий() Тогда
			Получатель = Выборка.Ссылка;
		КонецЕсли;
	ИначеЕсли ТипЗнч(ПолучательПисьма) = Тип("СправочникСсылка.Пользователи") Тогда
	       Получатель = ПолучательПисьма;
	КонецЕсли;
	
	//Заполним параметры для процедуры	
	СписокПользователей = Новый СписокЗначений();
	СписокПользователей.Добавить(Получатель);

	ДопПараметры = Новый Структура("СписокПользователей, Описание, Тема",СписокПользователей,ТекстСообщения,"Напоминание о жалобе клиента");	
		
	опСоздатьОповещение(СсылкаНаОбъект, ДопПараметры); 
	
КонецПроцедуры

