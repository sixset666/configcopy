// процедура заполняет курсы рубля и доллара
//
// Параметры:
//  ЗаполнятьВсе	– Булево	– Признак заполнения курса рубля.
//
Процедура ЗаполнитьПредопределенныеЭлементы(ЗаполнятьВсе=Ложь) Экспорт
	МенВалюты = Справочники.Валюты;
	ОснВалютаРуб = МенВалюты.НайтиПоКоду("643");
	Если ОснВалютаРуб.Пустая() Тогда
		ОснВалютаРуб = МенВалюты.НайтиПоКоду("810");
		ИзменитьКодРубля=Истина;
	Иначе
		ИзменитьКодРубля=Ложь;
	КонецЕсли;
	Если (ОснВалютаРуб.Пустая()) ИЛИ (ЗаполнятьВсе ИЛИ ИзменитьКодРубля) Тогда
		Если ОснВалютаРуб.Пустая() Тогда
			ОснВалютаРуб = МенВалюты.СоздатьЭлемент();
		Иначе
			ОснВалютаРуб = ОснВалютаРуб.ПолучитьОбъект();
		КонецЕсли;
		НовыйЭлемент = ОснВалютаРуб.ЭтоНовый();
		ОснВалютаРуб.Код = "643";
		//перезаполняем реквизиты
		Если НовыйЭлемент ИЛИ ЗаполнятьВсе Тогда 
			ОснВалютаРуб.Наименование = "Руб";
			ОснВалютаРуб.НаименованиеПолное = "Российский рубль";
			ОснВалютаРуб.ПараметрыПрописиНаРусском = "рубль, рубля, рублей, м, копейка, копейки, копеек, ж, 2";
		КонецЕсли;
		//Сохранение справочника
		Если ОснВалютаРуб.Модифицированность() Тогда
			Попытка		
				ОснВалютаРуб.ОбменДанными.Загрузка = ИСТИНА;
				ОснВалютаРуб.Записать();
				Сообщить("Справочник ""Валюты"". "+?(НовыйЭлемент,"Создан","Модифицирован")+" элемент """+СокрЛП(ОснВалютаРуб.Наименование)+"""");
			Исключение
			КонецПопытки;
		КонецЕсли;		
		ОснВалютаРуб = ОснВалютаРуб.Ссылка;
	КонецЕсли;
	//Запишем курс валюты
	СтруктураКурсаРуб = обКурсДляВалюты(ОснВалютаРуб,ТекущаяДата());
	Если СтруктураКурсаРуб.Курс = 0 Тогда
		МенЗаписиКурсов = РегистрыСведений.КурсыВалют.СоздатьМенеджерЗаписи();
		МенЗаписиКурсов.Период = Дата("20040101");
		МенЗаписиКурсов.Валюта = ОснВалютаРуб;
		МенЗаписиКурсов.Курс = 1;
		МенЗаписиКурсов.Кратность = 1;
		МенЗаписиКурсов.Записать(Истина);
	КонецЕсли;
	ОснВалютаДол = МенВалюты.НайтиПоКоду("840");
	Если (ОснВалютаДол.Пустая()) ИЛИ (ЗаполнятьВсе) Тогда
		Если ОснВалютаДол.Пустая() Тогда
			ОснВалютаДол = МенВалюты.СоздатьЭлемент();
		Иначе
			ОснВалютаДол = ОснВалютаДол.ПолучитьОбъект();
		КонецЕсли;
		//перезаполняем реквизиты
		ОснВалютаДол.Наименование = "USD";
		ОснВалютаДол.НаименованиеПолное = "доллары США";
		ОснВалютаДол.Код = "840";
		ОснВалютаДол.ПараметрыПрописиНаРусском = "доллар, доллара, долларов, м, цент, цента, центов, м, 2";
		//Сохранение справочника
		НовыйЭлемент = ОснВалютаДол.ЭтоНовый();
		Если ОснВалютаДол.Модифицированность() Тогда
			Попытка		
				ОснВалютаДол.ОбменДанными.Загрузка = ИСТИНА;
				ОснВалютаДол.Записать();
				Сообщить("Справочник ""Валюты"". "+?(НовыйЭлемент,"Создан","Модифицирован")+" элемент """+СокрЛП(ОснВалютаДол.Наименование)+"""");
			Исключение
			КонецПопытки;
		КонецЕсли;		
		ОснВалютаДол = ОснВалютаДол.Ссылка;
	КонецЕсли;
	//Запишем курс валюты
	СтруктураКурсаДол = обКурсДляВалюты(ОснВалютаДол,ТекущаяДата());
	Если СтруктураКурсаДол.Курс = 0 Тогда
		МенЗаписиКурсов = РегистрыСведений.КурсыВалют.СоздатьМенеджерЗаписи();
		МенЗаписиКурсов.Период = Дата("20040101");
		МенЗаписиКурсов.Валюта = ОснВалютаДол;
		МенЗаписиКурсов.Курс = 30;
		МенЗаписиКурсов.Кратность = 1;
		МенЗаписиКурсов.Записать(Истина);
	КонецЕсли;
КонецПроцедуры // ЗаполнитьПредопределенныеЭлементы()
