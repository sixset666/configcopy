// Процедура заполнения предопределенных элементов
Процедура ЗаполнитьПредопределенныеЭлементы(ЗаполнятьВсе=Ложь) Экспорт
	Выборка=Справочники.ВариантыКомплектации.Выбрать();
	Пока Выборка.Следующий() Цикл
		ОбъектИзменен=Ложь;
		Об=Выборка.ПолучитьОбъект();
		Если ЗаполнятьВсе Тогда
			Об.СформироватьПолноеНаименование();
			ОбъектИзменен=Истина;
		Иначе
			Если обЗначениеНеЗаполнено(Об.НаименованиеПолное) Тогда
				Об.СформироватьПолноеНаименование();
				ОбъектИзменен=Истина;
			КонецЕсли; 
		КонецЕсли; 
		Если ОбъектИзменен Тогда
			Попытка 
				Об.Записать(); 
				Сообщить("Вариант комплектации <"+СокрЛП(Об)+"> элемент обновлен!");
			Исключение
				Сообщить("Вариант комплектации <"+СокрЛП(Об)+"> ошибка при записи элемента!",СтатусСообщения.Важное);
			КонецПопытки;
		КонецЕсли; 
	КонецЦикла;
КонецПроцедуры
