// Процедура заполнения предопределенных элементов справочника
//
// Параметры:
// ЗаполнятьВсе - Булево - Признак заполнение всей информации
//
Процедура ЗаполнитьПредопределенныеЭлементы(ЗаполнятьВсе = Ложь) Экспорт
	ПользователиРобот = Справочники.Пользователи.Робот.ПолучитьОбъект();
	Если ЗаполнятьВсе Тогда
		ПользователиРобот.Подразделение = Справочники.ПодразделенияКомпании.ОсновноеПодразделение;
		ПользователиРобот.Организация   = Справочники.Организации.ОсновнаяОрганизация;
	Иначе
		Если обЗначениеНеЗаполнено(ПользователиРобот.Подразделение) Тогда
			ПользователиРобот.Подразделение = Справочники.ПодразделенияКомпании.ОсновноеПодразделение;
		КонецЕсли;
		Если обЗначениеНеЗаполнено(ПользователиРобот.Организация) Тогда
			ПользователиРобот.Организация = Справочники.Организации.ОсновнаяОрганизация;;
		КонецЕсли;
	КонецЕсли;
	//Сохранение справочника
	Если ПользователиРобот.Модифицированность() Тогда
		Попытка		
			ПользователиРобот.Записать();
			Сообщить("Справочник ""Пользователи"". Обновлен элемент """+СокрЛП(ПользователиРобот.Наименование)+"""");
		Исключение
		КонецПопытки;
	КонецЕсли;
КонецПроцедуры // ЗаполнитьПредопределенныеЭлементы()
