// Процедура заполнения предопределенных элементов
Процедура ЗаполнитьПредопределенныеЭлементы(ЗаполнятьВсе=Ложь) Экспорт
	ЭлементСправочника=Справочники.Нормочасы.Рубль.ПолучитьОбъект();
	ВалютаРубль=Справочники.Валюты.НайтиПоКоду("643");
	Если ЗаполнятьВсе Тогда
		ЭлементСправочника.Валюта=ВалютаРубль;
		ЭлементСправочника.Цена=1;
	Иначе
		Если обЗначениеНеЗаполнено(ЭлементСправочника.Валюта) Тогда
			ЭлементСправочника.Валюта=ВалютаРубль;
		КонецЕсли;
		Если обЗначениеНеЗаполнено(ЭлементСправочника.Цена) Тогда
			ЭлементСправочника.Цена=1;
		КонецЕсли;
	КонецЕсли;
	//Сохранение справочника
	Если ЭлементСправочника.Модифицированность() Тогда
		Попытка		
			ЭлементСправочника.Записать();
			Сообщить("Справочник ""Нормочасы"". Обновлен элемент """+СокрЛП(ЭлементСправочника.Наименование)+"""");
		Исключение
		КонецПопытки;
	КонецЕсли;
КонецПроцедуры	
