	НомерСтроки      = 0;
	ИзмерениеСтроки  = ПолучитьИзмерениеСтроки(НомерСтроки);
	ИзмерениеСтроки  = Мин(ИзмерениеСтроки, 4);
	ТекСтрока = ИзмеренияСтроки[НомерСтроки];
	ТекСтрока.Использование = Ложь;
	ТекСтрока.Представление = "Период строки";
	ТекСтрока.ПутьКДанным   = "ПериодСтроки";
	
	//Если ТекСтрока = Неопределено Тогда
	//	
	//КонецЕсли;
	ИзмерениеКолонки = СписокПериодов.Индекс(СписокПериодов.НайтиПоЗначению(ИзмеренияКолонки[0].ПутьКДанным));
	ИзмерениеКолонки = Макс(ИзмерениеКолонки, ИзмерениеСтроки+1);
	
