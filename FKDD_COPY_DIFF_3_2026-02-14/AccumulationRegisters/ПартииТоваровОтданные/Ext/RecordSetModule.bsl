	ЗначенияБлокировки.Вставить("Контрагент", Контрагент); 
	ЗначенияБлокировки.Вставить("ДоговорВзаиморасчетов", ДоговорВзаиморасчетов); 
	СтруктураПараметровБлокировки.Вставить("ИсточникДанных", тзТоваров);
