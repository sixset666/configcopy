// процедура заполнения предопределенных элементов
//
// Параметры:
// ЗаполнятьВсе - Булево - Признак заполнение всей информации
//
Процедура ЗаполнитьПредопределенныеЭлементы(ЗаполнятьВсе=Ложь) Экспорт
	
	СписокРабот = Новый СписокЗначений;
	СписокРабот.Добавить(Справочники.Автоработы.Приемка);
	СписокРабот.Добавить(Справочники.Автоработы.Выдача);
	
	Для Каждого ТекЭлемент Из СписокРабот Цикл
		ТекРабота = ТекЭлемент.Значение;
		СвойствоВидИспользования = ПланыВидовХарактеристик.СвойстваОбъектов.ВидИспользованияАвтоработы;
		ВидИспользованияЗначениеСвойства = обПолучитьЗначениеСвойства(ТекРабота,СвойствоВидИспользования);
		Если НЕ ЗначениеЗаполнено(ВидИспользованияЗначениеСвойства) Тогда
			НаборЗаписейЗначенияСвойствОбъектов	= РегистрыСведений.ЗначенияСвойствОбъектов.СоздатьНаборЗаписей();
			НаборЗаписейЗначенияСвойствОбъектов.Отбор.Объект.Значение = ТекРабота;
			НаборЗаписейЗначенияСвойствОбъектов.Отбор.Объект.Использование = Истина;
			НаборЗаписейЗначенияСвойствОбъектов.Отбор.Свойство.Значение = СвойствоВидИспользования;
			НаборЗаписейЗначенияСвойствОбъектов.Отбор.Свойство.Использование = Истина;
			НаборЗаписейЗначенияСвойствОбъектов.Прочитать();
			НаборЗаписейЗначенияСвойствОбъектов.Очистить();
			НоваяЗапись = НаборЗаписейЗначенияСвойствОбъектов.Добавить();
			НоваяЗапись.Объект = ТекРабота;
			НоваяЗапись.Свойство = СвойствоВидИспользования;
			НоваяЗапись.Значение = Перечисления.ВидыИспользованияАвторабот.Планирование;
			Попытка
				НаборЗаписейЗначенияСвойствОбъектов.Записать();	
			Исключение
				Сообщить("Не удалось записать значение свойства  " + Строка(СвойствоВидИспользования) + " для " + Строка(ТекРабота), СтатусСообщения.Важное);	
			КонецПопытки;
		КонецЕсли;
		
		Объект = ТекРабота.ПолучитьОбъект();
		Объект.НаименованиеПолное = Объект.Наименование;
		Объект.Номенклатура = Справочники.Номенклатура.Авторабота;
		Объект.ОбменДанными.Загрузка = Истина;
		Попытка
			Объект.Записать();
		Исключение
			Сообщить("Ошибка обновления автоработы <"+Объект+">: "+ОписаниеОшибки());
		КонецПопытки; 
		
	КонецЦикла
	
КонецПроцедуры // ЗаполнитьПредопределенныеЭлементы()
