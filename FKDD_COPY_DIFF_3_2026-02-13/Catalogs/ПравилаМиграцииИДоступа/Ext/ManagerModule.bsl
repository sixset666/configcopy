// Процедура заполнения предопределенных элементов справочника
//
// Параметры:
// ЗаполнятьВсе - Булево - Признак заполнение всей информации
//
Процедура ЗаполнитьПредопределенныеЭлементы(ЗаполнятьВсе = Ложь) Экспорт
	// проверим заполнение предопределенных элементов
	НеобходимоСохранить = Ложь;
	ПравилоМиграцииОбъект = Справочники.ПравилаМиграцииИДоступа.ПолнаяМиграция.ПолучитьОбъект();
	Если ПравилоМиграцииОбъект.ВариантНастройки <> Перечисления.СпособыМиграцииОбъектов.ПолнаяМиграция Тогда
		ПравилоМиграцииОбъект.ВариантНастройки = Перечисления.СпособыМиграцииОбъектов.ПолнаяМиграция;
		НеобходимоСохранить = Истина;
	КонецЕсли;
	Если Найти(ВРЕГ(СокрЛП(ПравилоМиграцииОбъект.Наименование)),"ПОЛНАЯ МИГРАЦИЯ") = 0 Тогда
		ПравилоМиграцииОбъект.Наименование = "Полная миграция (по всем узлам)";
		НеобходимоСохранить = Истина;
	КонецЕсли;
	Если НеобходимоСохранить Тогда
		Попытка
			ПравилоМиграцииОбъект.УстановитьНовыйКод();
			ПравилоМиграцииОбъект.Записать();
			Сообщить("Справочник ""Правила миграции и доступа"". Обновлен элемент """ + ПравилоМиграцииОбъект.Наименование + """");
		Исключение
		КонецПопытки;
	КонецЕсли;
	
	НеобходимоСохранить = Ложь;
	ПравилоМиграцииОбъект = Справочники.ПравилаМиграцииИДоступа.МиграцияПоПодразделениямУзлов.ПолучитьОбъект();
	Если ПравилоМиграцииОбъект.ВариантНастройки <> Перечисления.СпособыМиграцииОбъектов.МиграцияПоПодразделениямУзлов Тогда
		ПравилоМиграцииОбъект.ВариантНастройки = Перечисления.СпособыМиграцииОбъектов.МиграцияПоПодразделениямУзлов;
		НеобходимоСохранить = Истина;
	КонецЕсли;
	Если Найти(ВРЕГ(СокрЛП(ПравилоМиграцииОбъект.Наименование)),"УЗЛЫ С ПОДРАЗДЕЛЕНИЕМ ДОКУМЕНТА") = 0 Тогда
		ПравилоМиграцииОбъект.Наименование = "В узлы с подразделением документа";
		НеобходимоСохранить = Истина;
	КонецЕсли;
	Если НеобходимоСохранить Тогда
		Попытка
			ПравилоМиграцииОбъект.УстановитьНовыйКод();
			ПравилоМиграцииОбъект.Записать();
			Сообщить("Справочник ""Правила миграции и доступа"". Обновлен элемент """ + ПравилоМиграцииОбъект.Наименование + """");
		Исключение
		КонецПопытки;
	КонецЕсли;
	
КонецПроцедуры // ЗаполнитьПредопределенныеЭлементы()
