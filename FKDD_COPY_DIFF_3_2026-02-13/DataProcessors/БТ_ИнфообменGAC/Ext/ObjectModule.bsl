		Структура.Вставить("purchase_id", идЗН);
		Структура.Вставить("code", ?(ЗначениеЗаполнено(СтрокаРабот.Работа.Артикул),СтрокаРабот.Работа.Артикул,СтрокаРабот.Работа.Код));
