		Ошибка = "";
		идРабот = ОтправитьЗапрос("/api/purchase-work", Структура, Ошибка);
		
		Возврат идРабот;
	Иначе
		Ошибка = "Работа не найдена в ЗН";
	КонецЕсли;
	
