
//возвращает по значению перечисления картинку из библиотеки                
Функция ПолучитьИмяКартинки(ВыбЗначение) Экспорт
	
	Если ТипЗнч(ВыбЗначение) <> ТипЗнч(Перечисления.ТипыСообщений.ПустаяСсылка()) Тогда
		Возврат "ВходящееСообщение";
	КонецЕсли;
	
	СоответствиеКартинки = Новый Соответствие;
	СоответствиеКартинки.Вставить(Перечисления.ТипыСообщений.Входящее, 	"ВходящееСообщение");
	СоответствиеКартинки.Вставить(Перечисления.ТипыСообщений.Исходящее,	"ИсходящееСообщение");
	
 	ИмяКартинки = СоответствиеКартинки.Получить(ВыбЗначение);
	Если ИмяКартинки = Неопределено Тогда
		Возврат "ВходящееСообщение";
	КонецЕсли;
	
	Возврат ИмяКартинки;
КонецФункции

//возвращает список элементов перечисления 
#Если Клиент Тогда
Функция ПолучитьСписокЭлементовПеречисления() Экспорт
	Список = Новый СписокЗначений;
	Для Каждого ТекПеречисление Из Метаданные.Перечисления.ТипыСообщений.ЗначенияПеречисления Цикл
		ЗнПеречисление = Перечисления.ТипыСообщений[ТекПеречисление.Имя];
		ИмяКартинки = ПолучитьИмяКартинки(ЗнПеречисление);
		Список.Добавить(ЗнПеречисление,ТекПеречисление.Синоним,,БиблиотекаКартинок[ИмяКартинки]);	
	КонецЦикла;
	Возврат Список;
КонецФункции
#КонецЕсли

